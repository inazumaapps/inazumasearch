<?xml version="1.0" encoding="utf-8" ?>
<nlog xmlns="http://www.nlog-project.org/schemas/NLog.xsd"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="http://www.nlog-project.org/schemas/NLog.xsd ../NLog.xsd"
      autoReload="true"
      throwExceptions="true"
      internalLogLevel="Off" internalLogFile="${tempdir}\nlog-internal.log">

	<targets>
		<wrapper-target xsi:type="BufferingWrapper" flushTimeout="3000" name="logfile">
			<target xsi:type="File" name="logfile_inner"
					fileName="${gdc:item=LogDirPath}/InazumaSearch_${shortdate}.log"
					layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
					encoding="UTF-8" />
		</wrapper-target>

		<wrapper-target xsi:type="BufferingWrapper" flushTimeout="3000" name="logfile_debug">
			<target xsi:type="File" name="logfile_debug_inner"
					fileName="${gdc:item=LogDirPath}/InazumaSearch_${shortdate}_debug.log"
					layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
					encoding="UTF-8" />
		</wrapper-target>

		<wrapper-target xsi:type="BufferingWrapper" flushTimeout="3000" name="logfile_trace">
			<target xsi:type="File" name="logfile_trace_inner"
					fileName="${gdc:item=LogDirPath}/InazumaSearch_${shortdate}_trace.log"
					layout="${longdate}|${level:uppercase=true}|${logger}|${message}"
					encoding="UTF-8" />
		</wrapper-target>

		<target name="logconsole" xsi:type="Console" />

		<wrapper-target xsi:type="BufferingWrapper" flushTimeout="3000" name="csvFileWrapper">
			<target xsi:type="File" name="csvFile" encoding="shift-jis" fileName="${gdc:item=LogDirPath}/OperationLog.csv">
				<layout xsi:type="CsvLayout" delimiter="Comma">
					<column name="セッションID" layout="${event-properties:SessionId}" />
					<column name="時刻" layout="${longdate}" />
					<column name="重要度" layout="${event-properties:Level}" />
					<column name="種別コード" layout="${event-properties:LogType}" />
					<column name="メッセージ" layout="${message}" />
					<column name="補足情報" layout="${event-properties:AdditionalMessage}" />
					<column name="対象ファイルパス" layout="${event-properties:FilePath}" />
					<column name="処理時間" layout="${event-properties:ProcessTime}" />
				</layout>
			</target>
		</wrapper-target>
	</targets>

	<rules>
		<logger name="*" minlevel="Info" writeTo="logfile"/>
		<logger name="*" minlevel="Debug" writeTo="logfile_debug" />
		<logger name="*" minlevel="Trace" writeTo="logfile_trace"/>
		<logger name="*" minlevel="Debug" writeTo="logconsole" />
		<logger name="OperationLog" minlevel="Info" writeTo="csvFile"/>

	</rules>
</nlog>
